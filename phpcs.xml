<?xml version="1.0"?>
<ruleset name="Laravel Project Rules">

    <!-- Incluye las reglas de PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Reglas específicas recomendadas -->
    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>
    <rule ref="Generic.PHP.LowerCaseKeyword"/>
    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing"/>
    <rule ref="Squiz.Functions.FunctionDeclarationArgumentSpacing"/>
    <rule ref="PSR2.Methods.MethodDeclaration"/>
    <rule ref="Generic.NamingConventions.UpperCaseConstantName"/>
    <rule ref="PSR2.Files.ClosingTag"/>
    <rule ref="Squiz.Strings.DoubleQuoteUsage"/>

    <!-- Excluye reglas específicas -->
    <exclude name="Squiz.Commenting.FunctionComment.MissingReturn"/>
    <exclude name="Generic.Commenting.Todo"/>
    <exclude name="Generic.Files.LineLength"/>
    <exclude name="Squiz.Strings.ConcatenationSpacing"/>
    <exclude name="PSR2.Methods.FunctionCallSignature.SpaceAfterOpenBracket"/>
    <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace"/>
    <exclude name="Generic.WhiteSpace.ScopeIndent"/>

    <!-- Carpetas para analizar -->
    <file>app/</file>
    <file>routes/</file>
    <file>config/</file>
    <file>database/factories/</file>
    <file>database/migrations/</file>
    <file>database/seeds/</file>
    <file>tests/</file>
    <file>resources/views/</file>

    <!-- Carpetas para excluir -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>
    <exclude-pattern>resources/lang/*</exclude-pattern>
    <exclude-pattern>storage/framework/*</exclude-pattern>

</ruleset>

